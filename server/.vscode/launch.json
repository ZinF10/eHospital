{
	"configurations": [
		{
			"name": "Python Debugger: Django",
			"type": "debugpy",
			"request": "launch",
			"args": ["runserver"],
			"django": true,
			"autoStartBrowser": true,
			"program": "${workspaceFolder}\\website\\manage.py"
		},
		{
			"name": "Docker: Python - Django",
			"type": "docker",
			"request": "launch",
			"preLaunchTask": "docker-run: debug",
			"python": {
				"pathMappings": [
					{
						"localRoot": "${workspaceFolder}",
						"remoteRoot": "/app"
					}
				],
				"projectType": "django"
			}
		}
	]
}
